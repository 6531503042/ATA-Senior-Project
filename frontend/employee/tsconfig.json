{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/app/components/*"]
    },
    "types": ["node"]
  },
  "include": [
    "next-env.d.ts",
    "src",
    "next.config.*",
    "tailwind.config.*",
    "postcss.config.*"
  ],
  "exclude": ["node_modules"]
}
