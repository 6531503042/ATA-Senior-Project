{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["./*"],      
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"],
      "@types/*": ["./types/*"],
      "@libs/*": ["./libs/*"],
      "@hooks/*": ["./hooks/*"],
      "@stores/*": ["./stores/*"],
      "@contexts/*": ["./contexts/*"]
    },

    "types": ["node"],
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "plugins": [
      { "name": "next" }
    ],

    // üëá ‡πÉ‡∏´‡πâ TS ‡πÄ‡∏á‡∏µ‡∏¢‡∏ö warning baseUrl
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "next-env.d.ts",
    "app",           // üëà ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏à‡∏≤‡∏Å src ‚Üí app ‡∏ñ‡πâ‡∏≤‡πÑ‡∏ü‡∏•‡πå‡∏à‡∏£‡∏¥‡∏á‡∏≠‡∏¢‡∏π‡πà‡∏ó‡∏µ‡πà /app
    "components",
    "services",
    "types",
    "libs",
    "hooks",
    "stores",
    "contexts",
    "next.config.*",
    "tailwind.config.*",
    "postcss.config.*",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
