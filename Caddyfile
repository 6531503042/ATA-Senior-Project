:8088 {
	@api path /api/*
	handle @api {
		reverse_proxy 127.0.0.1:8080 {
			transport http {
				read_timeout 60s
				write_timeout 60s
				dial_timeout 30s
				response_header_timeout 30s
			}
		}
	}

	@admin path /admin*
	handle @admin {
		reverse_proxy 127.0.0.1:3000 {
			transport http {
				read_timeout 60s
				write_timeout 60s
				dial_timeout 30s
				response_header_timeout 30s
			}
			health_uri /admin
			health_interval 10s
			health_timeout 5s
		}
	}

	@employee path /employee*
	handle @employee {
		reverse_proxy 127.0.0.1:3001 {
			transport http {
				read_timeout 60s
				write_timeout 60s
				dial_timeout 30s
				response_header_timeout 30s
			}
			health_uri /employee/login
			health_interval 10s
			health_timeout 5s
		}
	}

	@root path /
	redir @root /admin
}
